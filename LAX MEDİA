  <script>
    // -- Boilerplate: year
    document.getElementById('yr').textContent = new Date().getFullYear();

    // -- Logo controls: normal / inverted / mono
    const heroLogo = document.getElementById('heroLogo');
    const mainLogo = document.getElementById('mainLogo');
    const logoCard = document.getElementById('logoCard');

    function setLogoStyle(style){
      // style: normal | inverted | mono
      if(style === 'normal'){
        heroLogo.style.filter = 'none';
        mainLogo.style.filter = 'none';
      } else if(style === 'inverted'){
        heroLogo.style.filter = 'invert(1) grayscale(1) contrast(1.05)'; 
        mainLogo.style.filter = 'invert(1) grayscale(1) contrast(1.05)';
      } else if(style === 'mono'){
        // make dark single-color (uses CSS blend)
        heroLogo.style.filter = 'grayscale(1) contrast(1.2) brightness(0.05)';
        mainLogo.style.filter = 'grayscale(1) contrast(1.2) brightness(0.05)';
      }
    }

    // -- Download displayed logo as PNG (canvas)
    async function downloadLogo(){
      try{
        const img = heroLogo || mainLogo;
        const canvas = document.createElement('canvas');
        const w = img.naturalWidth || 1200;
        const h = img.naturalHeight || 600;
        canvas.width = w; canvas.height = h;
        const ctx = canvas.getContext('2d');
        // draw white bg for transparency
        ctx.fillStyle = '#ffffff';
        ctx.fillRect(0,0,w,h);
        // create temporary image to apply filters
        const temp = new Image();
        temp.crossOrigin = 'anonymous';
        temp.src = img.src;
        await new Promise((res, rej) => { temp.onload = res; temp.onerror = rej; });
        // NOTE: canvas cannot apply CSS filter easily to drawImage; we can approximate by drawing then applying globalComposite if needed.
        ctx.drawImage(temp, 0, 0, w, h);
        // download
        const a = document.createElement('a');
        a.href = canvas.toDataURL('image/png');
        a.download = 'lax-media-logo.png';
        a.click();
      } catch(err){
        alert('Logo indirilemedi — tarayıcı güvenliği veya CORS olabilir. İstersen ben optimize edip başka formatta veririm.');
      }
    }

    // -- Hero background video toggle (initially off). Replace sampleVideoURL with your MP4 to enable.
    const bgVideoWrap = document.getElementById('bgVideoWrap');
    let videoEnabled = false;
    const sampleVideoURL = ''; // <-- put your mp4 url if you want default
    function toggleVideo(){
      if(!videoEnabled){
        if(!sampleVideoURL){
          alert('Video URL eklenmemiş. HTML içinde sampleVideoURL değişkenine MP4 URL koy veya bana video yükle, ben yerleştiririm.');
          return;
        }
        bgVideoWrap.style.display = 'block';
        const v = document.createElement('video');
        v.id = 'bgVideoEl';
        v.autoplay = true; v.loop = true; v.muted = true; v.playsInline = true;
        v.src = sampleVideoURL;
        v.style.width = '100%'; v.style.height = '100%'; v.style.objectFit = 'cover'; v.style.filter = 'brightness(.7) saturate(.9)';
        bgVideoWrap.appendChild(v);
        videoEnabled = true;
      } else {
        bgVideoWrap.style.display = 'none';
        bgVideoWrap.innerHTML = '';
        videoEnabled = false;
      }
    }

    // -- Intersection Observer for fade-in
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting) e.target.classList.add('in-view');
      });
    }, {threshold: 0.12});
    document.querySelectorAll('.fade-in').forEach(el=>io.observe(el));

    // -- Form submission strategy:
    // 1) Try Formspree (primary)
    // 2) If formspree response not OK, try EmailJS (client-side) if configured
    // 3) If EmailJS fails, try Netlify Function POST to /.netlify/functions/contact (if you deploy)
    //
    // Replace EmailJS settings below: emailjs.init('YOUR_USER_ID'), service and template ids.

    // init EmailJS (replace YOUR_EMAILJS_USER_ID)
    try{
      emailjs.init('YOUR_EMAILJS_USER_ID'); // <-- replace with your EmailJS user id
    }catch(e){
      // emailjs not configured or loaded — we'll detect later
      console.warn('EmailJS init skipped or missing user id.');
    }

    async function handleSubmit(e){
      e.preventDefault();
      const form = e.target;
      const statusEl = document.getElementById('formStatus');
      statusEl.textContent = 'Gönderiliyor...';

      // 1) Try Formspree
      try{
        const res = await fetch(form.action, {method:'POST', body:new FormData(form), headers:{'Accept':'application/json'}});
        if(res.ok){
          statusEl.textContent = 'Mesaj başarıyla gönderildi! Teşekkürler :)';
          form.reset();
          return false;
        } else {
          // parse possible JSON error
          let errJSON = null;
          try{ errJSON = await res.json(); } catch(_) {}
          console.warn('Formspree returned non-ok', res.status, errJSON);
          // fallthrough to EmailJS
        }
      } catch(err){
        console.warn('Formspree request failed:', err);
      }

      // 2) Try EmailJS fallback (client-side)
      // NOTE: you must replace service_id and template_id and ensure template fields match names.
      try{
        if(typeof emailjs !== 'undefined' && emailjs.sendForm){
          // replace 'service_xxx' and 'template_xxx' with your EmailJS service/template
          const serviceID = 'service_xxx';   // <-- replace
          const templateID = 'template_xxx'; // <-- replace
          await emailjs.sendForm(serviceID, templateID, form);
          statusEl.textContent = 'Mesaj gönderildi (EmailJS ile). Teşekkürler!';
          form.reset();
          return false;
        } else {
          console.warn('EmailJS not available or not configured.');
        }
      } catch(e){
        console.warn('EmailJS send failed:', e);
      }

      // 3) Try Netlify Functions fallback (if you host)
      // Example: POST to /.netlify/functions/contact with JSON
      try {
        const payload = {};
        new FormData(form).forEach((v,k)=>{ payload[k]=v; });
        const r = await fetch('/.netlify/functions/contact', {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify(payload)
        });
        if(r.ok){
          statusEl.textContent = 'Mesaj gönderildi (Netlify Function ile). Teşekkürler!';
          form.reset();
          return false;
        } else {
          console.warn('Netlify function returned non-ok', r.status);
        }
      } catch(err){
        console.warn('Netlify function POST failed:', err);
      }

      // If all failed:
      statusEl.textContent = 'Gönderim başarısız oldu. Lütfen doğrudan e-posta ile iletişime geç: iletisim@laxmedia.com';
      return false;
    }

    // Optional: ping analytics/event on form success (you can add more tracking)
    // Example function to track with GA & FB
    function trackSubmission(){
      try{ gtag('event','contact_form_submit'); } catch(e){}
      try{ fbq('track','Lead'); } catch(e){}
    }
  </script>
</body>
</html>)
